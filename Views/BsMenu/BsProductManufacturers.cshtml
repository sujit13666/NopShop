@model IList<ManufacturerModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="bs-manufacturers">
        @if (Model.Count == 1)
        {
            <span class="bs-product-details-label"><strong>@T("Products.Manufacturer"):</strong></span>
        }
        else
        {
            <span class="bs-product-details-label"><strong>@T("Products.Manufacturers"):</strong></span>
        }
        <span class="value">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                @item.Name
                if (i != Model.Count - 1)
                {
                    <span class="separator">,</span>
                }
            }
        </span>
    </div>
<br/>
}
